<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.olemiss.jrbush.mastermind"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.olemiss.jrbush.mastermind.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.olemiss.jrbush.mastermind.MasterMind"
            android:label="@string/title_activity_master_mind"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="edu.olemiss.jrbush.mastermind.MasterMind" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.olemiss.jrbush.mastermind.EndGameDialog"
            android:label="@string/title_activity_you_win_dialog" >
        </activity>
        <activity
            android:name="edu.olemiss.jrbush.mastermind.ShowScores"
            android:label="@string/title_activity_show_scores" >
            <intent-filter>
                <action android:name="edu.olemiss.jrbush.mastermind.ShowScores" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.olemiss.jrbush.mastermind.NameInputDialogFragment"
            android:label="@string/title_activity_name_input_dialog_fragment" >
        </activity>
    </application>

</manifest>